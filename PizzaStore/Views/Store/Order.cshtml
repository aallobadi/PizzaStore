@using PizzaStore.Models
@model PizzaStore.Models.PizzaAndToppingViewModel

@{
    ViewBag.Title = "Order";
}

<h2>Order</h2>

@using (Html.BeginForm("Confirm", "Store"))
{
    <div class="w3-container">
        <div>
            <h4>Pizza</h4>
            <hr/>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Pizza.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Pizza.Name)
                </dd>
                <dt>
                    <label>Size:  </label> &nbsp
                </dt>
                <div class="form-group">
                    <div class="col-sm-10">
                        Small Size $@ViewBag.smallPizza.Price  @Html.RadioButton("Size", "small", true) &nbsp
                        Medium Size $@ViewBag.mediumPizza.Price @Html.RadioButton("Size", "medium") &nbsp
                        Large Size $@ViewBag.largePizza.Price @Html.RadioButton("Size", "large")
                    </div>
                </div>
                <dt>
                    <label>Tooping:  </label> &nbsp
                </dt>
                <div class="form-group">
                    <div class="checkbox" id="top">
                        @foreach (var top in Model.Toppings)
                        {
                        <label>
                            <input name="SelectedToppings" type="checkbox" value="@top.Name"> @top.Name $ @top.Price &nbsp

                        </label>
                        }
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="submit" value="submit" />
                        <input type="reset" />
                    </div>
                </div>
            </dl>
        </div>
    </div>
}

