@using PizzaStore.Models
@model PizzaStore.Models.PizzaAndToppingViewModel

@{
    ViewBag.Title = "Order";
}

@using (Html.BeginForm("Confirm", "Store"))
{

<div class="container">
    <div class="row">
        <div class="col-lg-10 mx-auto col-12 text-center mb-3">
            <h1 class="mt-0 text-primary">Our Menu</h1>
            <p class="lead">Begin with a selection from our award pizza menu of commerce award of excellence.</p>
        </div>
      
        <div class="card-columns">
           
            </div><br />
           
        </div>
        </div>
            <div class="card-columns">
                <div class="card card-body">
                    <div class="col-12 mt-4">
                        <h3 class="text-left">Pizza</h3>
                        <hr class="accent my-5">
                    </div>
                    <span class="float-left">$6.05</span>
                    <h6 class="text-truncate">@Html.DisplayFor(model => model.Pizza.Name)</h6>
                    <p class="small">The legend of pizza Margherita is considered a false history, as a pizza made with the same toppings was already present in Naples between 1796 and 1810.</p>
                    <div class="form-group">
                        <div class="col-sm-10">
                            <label>Pick a size:</label>
                            Small Size $@ViewBag.smallPizza.Price  @Html.RadioButton("Size", "small", true) &nbsp
                            Medium Size $@ViewBag.mediumPizza.Price @Html.RadioButton("Size", "medium") &nbsp
                            Large Size $@ViewBag.largePizza.Price @Html.RadioButton("Size", "large")
                        </div>
                    </div>

                    <div class="card-columns">
                        <div class="card card-body">
                            <div class="col-12 mt-4">
                                <hr class="accent my-5">
                            </div>
                            <div class="checkbox" id="top">
                                @foreach (var top in Model.Toppings)
                                {

                                    <div> <input name="SelectedToppings" type="checkbox" value="@top.Name"> @top.Name $ @top.Price </div>


                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary" value="submit">Submit </button>
                                @Html.ActionLink("Cancel", "Reset", "Store", null, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
   
        }
