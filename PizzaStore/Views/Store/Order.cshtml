@using PizzaStore.Models
@model PizzaStore.Models.PizzaAndToppingViewModel

@{
    ViewBag.Title = "Order";
}



<h2>Order</h2>

@using (Html.BeginForm("Confirm", "Store"))
{
    <div class="w3-container">

        <div>
            <h4>Pizza</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Pizza.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Pizza.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Pizza.Size):
                </dt>


                <div class="form-group">
                    <div class="col-sm-10">
                        Small $6.5 @Html.RadioButton("Size", "small", true)
                        Medium $8.8 @Html.RadioButton("Size", "medium")
                        Large $11.11 @Html.RadioButton("Size", "large")
                    </div>
                </div>

                <dt>
                    <label>Tooping:  </label>
                </dt>

                <div class="form-group">

                    <div class="checkbox" id="top">
                        @foreach (var top in Model.Topping)
                        {
                            <label>
                                <dt>
                                    <input name="SelectedToppings" type="checkbox" value="@top.Name"> @Html.Label(top.Name) $ @top.Price
                                </dt>
                            </label>

                        }

                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="submit" value="submit" />
                        <input type="reset" />
                    </div>
                </div>
            </dl>
        </div>
    </div>
}

